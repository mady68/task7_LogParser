<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <File name="MyFileAppender" fileName="D:\Some\testlog.txt" immediateFlush="false" append="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>

    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="MyFileAppender"/>

        </Root>
    </Loggers>
</Configuration>



